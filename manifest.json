{
	"manifest_version": 3,
	"name": "Wikipedia Racing",
	"description": "Race your friends from one Wikipedia page to another!",
	"version": "1.0",
	"icons": {
		"1024": "images/icon-1024.png"
	},
	"action": {
		"default_popup": "global/entrypoint.html"
	},
	"background": {
		"service_worker": "global/background.js",
		"type": "module"
	},
	"permissions": [ "tabs", "scripting", "offscreen" ],
	"host_permissions": [
		"https://*.wikipedia.org/*"
	]
}